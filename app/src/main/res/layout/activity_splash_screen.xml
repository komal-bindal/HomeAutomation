<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/splash"
        android:layout_width="155dp"
        android:layout_height="247dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="260dp"
        android:layout_marginTop="544dp"
        android:layout_marginEnd="-104dp"
        android:layout_marginBottom="-46dp"
        android:contentDescription="@string/background_shape"
        android:rotation="-40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shape1" />

    <ImageView
        android:id="@+id/splash2"
        android:layout_width="161dp"
        android:layout_height="215dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="260dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-95dp"
        android:layout_marginBottom="514dp"
        android:contentDescription="@string/background_shape"
        android:rotation="-40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shape1" />

    <ImageView
        android:id="@+id/splash3"
        android:layout_width="145dp"
        android:layout_height="265dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="260dp"
        android:layout_marginTop="-67dp"
        android:layout_marginEnd="352dp"
        android:layout_marginBottom="533dp"
        android:contentDescription="@string/background_shape"
        android:rotation="-40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shape1" />

    <ImageView
        android:id="@+id/splash4"
        android:layout_width="156dp"
        android:layout_height="212dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="260dp"
        android:layout_marginTop="528dp"
        android:layout_marginEnd="354dp"
        android:layout_marginBottom="-9dp"
        android:contentDescription="@string/background_shape"
        android:rotation="-40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shape1" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash4"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="282dp"
        android:gravity="center"
        android:text="FEEL THE LUXURY"
        android:textColor="#366408"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="353dp"
        android:layout_marginEnd="-1dp"
        android:gravity="center"
        android:text="Powered by Intellect Driven By Values"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:ignore="NotSibling" />

    <ProgressBar
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="262dp"
        android:padding="6dp" />

</RelativeLayout>